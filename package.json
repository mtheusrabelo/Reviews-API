{
  "name": "reviews-api",
  "version": "1.0.0",
  "description": "Reviews API",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "debug": "nodemon --inspect=0.0.0.0:10888 src/server.js",
    "test": "jest tests/**/*.test.js",
    "coverage": "jest tests/**/*.test.js --coverage",
    "coverage:open": "npm run coverage && google-chrome coverage/lcov-report/index.html",
    "lint": "eslint src/**/*.js"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint"
    }
  },
  "keywords": [
    "reviews",
    "ratings",
    "comments"
  ],
  "author": "Matheus Freire Rabelo",
  "license": "MIT",
  "dependencies": {
    "awilix": "^4.2.7",
    "dayjs": "^1.9.4",
    "dotenv": "^8.2.0",
    "http-status": "^1.4.2",
    "ioredis": "^4.19.0",
    "joi": "^17.2.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.0.0",
    "koa-router": "^9.4.0",
    "nodemon": "^2.0.6",
    "pg": "^8.4.1",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1"
  }
}
